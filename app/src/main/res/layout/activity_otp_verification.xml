<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".otp_verification">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="175dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_launcher_foreground"
                android:id="@+id/AppIcon"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/AppIcon"
                android:layout_marginTop="2dp"
                android:text="mySangeet"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:id="@+id/AppName"
                />

            <TextView
                android:id="@+id/otp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OTP Verification"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_below="@+id/AppName"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/otpText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please enter the OTP send to your"
                android:layout_marginTop="2dp"
                android:textColor="@color/white"
                android:layout_below="@+id/otp"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/textMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:textColor="@color/white"
                android:layout_below="@+id/otpText"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:layout_below="@+id/textMobile"
                android:id="@+id/OTP">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    app:boxBackgroundColor="@color/white"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/input1"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:gravity="center"
                        android:maxLength="1"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:ignore="LabelFor"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    app:boxBackgroundColor="@color/white"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:id="@+id/input2"
                        android:inputType="number"
                        android:gravity="center"
                        android:maxLength="1"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:ignore="LabelFor"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    app:boxBackgroundColor="@color/white"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:imeOptions="actionNext"
                        android:id="@+id/input3"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:gravity="center"
                        android:maxLength="1"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:ignore="LabelFor"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    app:boxBackgroundColor="@color/white"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:id="@+id/input4"
                        android:gravity="center"
                        android:maxLength="1"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:ignore="LabelFor"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    app:boxBackgroundColor="@color/white"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:imeOptions="actionNext"
                        android:id="@+id/input5"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:gravity="center"
                        android:maxLength="1"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:ignore="LabelFor"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    app:boxBackgroundColor="@color/white"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:id="@+id/input6"
                        android:inputType="number"
                        android:gravity="center"
                        android:maxLength="1"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:ignore="LabelFor"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/resendOTP"
                android:layout_below="@+id/OTP"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/resendOtp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:text="Didn't receive the otp? "
                    android:layout_below="@+id/OTP"/>
                <TextView
                    android:id="@+id/resendOtp1"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="Resend OTP"
                    android:layout_below="@+id/OTP"/>
            </LinearLayout>

            <Button
                android:id="@+id/verify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/resendOTP"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:text="Verify OTP"
                android:textSize="20sp" />
        </RelativeLayout>

    </LinearLayout>

